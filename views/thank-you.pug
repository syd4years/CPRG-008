doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/stylesheets/style.css')
  title Thank you!

.center

  // Thank the user by name and display the data from database
  if displayPosts
    each post in displayPosts
      h1 Thank you #{post.fname}!
      h1 Info pulled from database:
      p= post.email 
      p= post.password 
      p= post.fname 
      p= post.lname 
      p= post.address 
      p= post.postal 
      p= post.province 
      p= post.country